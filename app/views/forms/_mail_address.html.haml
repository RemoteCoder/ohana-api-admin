%div.inst-box
  %header
    %strong
      Mailing Address
  %p
    = "Attention"
    = text_field_tag "attention", @location.key?(:mail_address) && @location.mail_address.key?(:attention) ? @location.mail_address.attention : "", maxlength: 255, class: "span5"
    %br
    = "Street"
    = text_field_tag "m_street", @location.key?(:mail_address) ? @location.mail_address.street : "", maxlength: 255, class: "span5"
    %br
    = "City"
    = text_field_tag "m_city", @location.key?(:mail_address) ? @location.mail_address.city : "", maxlength: 255
    %br
    = "State (2-letter abbreviation)"
    = text_field_tag "m_state", @location.key?(:mail_address) ? @location.mail_address.state : "", maxlength: 2, class: "span1"
    %br
    = "ZIP Code"
    = text_field_tag "m_zip", @location.key?(:mail_address) ? @location.mail_address.zip : "", maxlength: 10, class: "span2"
    %br